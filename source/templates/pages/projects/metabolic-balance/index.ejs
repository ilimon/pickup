          <article class="project text--center" itemscope itemtype="http://schema.org/CreativeWork">

            <section class="site__section">

              <div class="grid">

                <figure>
                  <picture>
                    <source data-srcset="content/images/projects/metabolic-balance/metabolic-balance-imac.webp" type="image/webp">
